/* pages/clinical_decision/clinical_decision.wxss */
page {
  background-color: #F6F6F6;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
  color: #333;
}

.form-subtitle {
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 40rpx;
  color: #666;
}

.form-group {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker {
  height: 80rpx;
  border: 1rpx solid #E0E0E0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  background-color: #FFFFFF;
}

.picker-arrow {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.radio-label {
  margin-right: 50rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.submit-button {
  background-color: #1296db; /* Theme color */
  color: white;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 40rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
}

.submit-button[disabled] {
  background-color: #A0A0A0;
  color: #E0E0E0;
}

.loading-indicator {
  text-align: center;
  margin-top: 40rpx;
  color: #666;
  font-size: 28rpx;
}

.result-section {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 40rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  border-bottom: 1rpx solid #EEEEEE;
  padding-bottom: 15rpx;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 新增样式 */
.category-tag {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  padding: 6rpx 12rpx;
  background-color: #F0F0F0;
  border-radius: 6rpx;
  display: inline-block;
}

.high-risk-tag {
  color: #FF4D4F;
  font-weight: 500;
  margin-left: 10rpx;
}

.warning-tag {
  font-size: 24rpx;
  color: #FF4D4F;
  margin-top: 10rpx;
  padding: 6rpx 12rpx;
  background-color: #FFF1F0;
  border-radius: 6rpx;
  border: 1rpx solid #FFCCC7;
  display: inline-block;
}