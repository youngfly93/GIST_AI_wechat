/* pages/research_main/research_main.wxss */
page {
  background-color: #F8F8F8;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #4A90E2; /* Added blue background */
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #ffffff; /* Changed text to white for blue background */
}

.tool-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; /* Distribute space between items */
}

.tool-item {
  width: 48%; /* Two items per row with a small gap */
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.07);
  box-sizing: border-box;
}

.tool-item:last-child:nth-child(odd) {
  /* If last item is odd, make it take full width or center it */
  /* For simplicity, we'll let it align left for now. Can be adjusted if only 3 items. */
  /* width: 100%; */ 
}

.tool-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
}

.tool-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.tool-description {
  font-size: 24rpx;
  color: #777777;
  min-height: 60rpx; /* Ensure consistent height for descriptions */
}